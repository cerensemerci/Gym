@model Basics.Models.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header border-secondary py-3">
                <h3 class="mb-0">Hizmet Tanımını Güncelle</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="EditService" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Duration" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="Duration" class="form-control bg-dark text-white border-secondary"
                                type="number" />
                            <span class="input-group-text bg-secondary border-secondary text-white">dakika</span>
                        </div>
                        <span asp-validation-for="Duration" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control bg-dark text-white border-secondary"
                                type="number" step="0.01" />
                            <span class="input-group-text bg-secondary border-secondary text-white">TL</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Services" class="btn btn-outline-secondary px-4">İptal</a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
