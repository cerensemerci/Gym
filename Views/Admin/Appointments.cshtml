@model IEnumerable<Basics.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Randevu Talepleri</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card bg-dark border-secondary">
        <div class="card-body">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Üye</th>
                        <th>Eğitmen</th>
                        <th>Hizmet</th>
                        <th>Tarih / Saat</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.Employee?.FullName</div>
                                <div class="small text-secondary">@item.Employee?.Email</div>
                            </td>
                            <td>@item.Trainer?.FullName</td>
                            <td>
                                <div>@item.Service?.Name</div>
                                <div class="small text-secondary">@item.Duration dk</div>
                            </td>
                            <td>
                                <div>@item.StartTime.ToShortDateString()</div>
                                <div class="small text-secondary">@item.StartTime.ToShortTimeString() -
                                    @item.EndTime.ToShortTimeString()</div>
                            </td>
                            <td>@item.Price.ToString("C2")</td>
                            <td>
                                @if (item.Status == "Booked")
                                {
                                    <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>
                                @if (item.Status == "Booked")
                                {
                                    <div class="d-flex gap-2">
                                        <form asp-action="ApproveAppointment" asp-route-id="@item.AvailabilityID" method="post">
                                            <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                                        </form>
                                        <form asp-action="CancelAppointment" asp-route-id="@item.AvailabilityID" method="post">
                                            <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                                        </form>
                                    </div>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <form asp-action="CancelAppointment" asp-route-id="@item.AvailabilityID" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">İptal Et</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
