@model IEnumerable<Basics.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Yönetimi";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css" rel="stylesheet" />
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Eğitmen Listesi</h2>
        <a asp-controller="Trainer" asp-action="CreateTrainer" class="btn btn-success"><i class="bi bi-plus-lg me-2"></i>Yeni Eğitmen Ekle</a>
    </div>

    <div class="card bg-dark border-secondary">
        <div class="card-body">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Uzmanlık</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Specialty</td>
                            <td>
                                <a asp-controller="Trainer" asp-action="EditTrainer" asp-route-id="@item.TrainerID" class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <form asp-controller="Trainer" asp-action="DeleteTrainer" asp-route-id="@item.TrainerID" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                                <button type="button" class="btn btn-info btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#trainerCalendarModal" data-trainer-id="@item.TrainerID">
                                    <i class="bi bi-calendar-check"></i> Takvim
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="trainerCalendarModal" tabindex="-1" aria-labelledby="trainerCalendarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="trainerCalendarModalLabel">Eğitmen Takvimi</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="trainerCalendar"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/locales/tr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarModal = document.getElementById('trainerCalendarModal');
            calendarModal.addEventListener('shown.bs.modal', function (event) {
                var button = event.relatedTarget;
                var trainerId = button.getAttribute('data-trainer-id');
                var calendarEl = document.getElementById('trainerCalendar');
                
                if (window.trainerCalendar) { window.trainerCalendar.destroy(); }
                
                window.trainerCalendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    locale: 'tr',
                    headerToolbar: { left: 'prev,next today', center: 'title', right: 'dayGridMonth,timeGridWeek,timeGridDay' },
                    events: {
                        url: '/Trainer/GetTrainerAvailabilities',
                        method: 'GET',
                        extraParams: { trainerId: trainerId },
                        failure: function () { alert('Takvim verileri yüklenirken hata oluştu.'); }
                    },
                    timeZone: 'local'
                });
                window.trainerCalendar.render();
            });
        });
    </script>
}
