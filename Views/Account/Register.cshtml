@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center py-4">
                <h3 class="font-weight-light my-2">Hesap Oluştur</h3>
            </div>
            <div class="card-body p-5">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input asp-for="FullName" class="form-control" id="inputFirstName"
                                    placeholder="Ad Soyad" />
                                <label for="inputFirstName">Ad Soyad</label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" id="inputEmail"
                                    placeholder="name@example.com" />
                                <label for="inputEmail">E-posta Adresi</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input asp-for="Password" class="form-control" id="inputPassword" type="password"
                                    placeholder="Şifre" />
                                <label for="inputPassword">Şifre</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input asp-for="ConfirmPassword" class="form-control" id="inputConfirmPassword"
                                    type="password" placeholder="Şifre Tekrar" />
                                <label for="inputConfirmPassword">Şifre Tekrar</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 mb-0">
                        <div class="d-grid"><button type="submit" class="btn btn-primary btn-block btn-lg fw-bold">Hesap
                                Oluştur</button></div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><a asp-action="Login" class="text-decoration-none">Zaten bir hesabın var mı? Giriş
                        Yap</a></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
