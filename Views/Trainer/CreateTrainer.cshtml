@model Basics.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
    Layout = "_Layout";
    var services = ViewBag.Services as List<Basics.Models.Service>;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card bg-dark text-white border-secondary shadow-lg">
            <div class="card-header border-secondary py-3">
                <h3 class="mb-0">Yeni Eğitmen Kaydı</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateTrainer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Ad</label>
                            <input asp-for="FirstName" class="form-control bg-dark text-white border-secondary"
                                required />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Soyad</label>
                            <input asp-for="LastName" class="form-control bg-dark text-white border-secondary"
                                required />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Specialty" class="form-label fw-bold">Uzmanlık Alanı</label>
                        <input asp-for="Specialty" class="form-control bg-dark text-white border-secondary"
                            placeholder="Örn: Vücut Geliştirme, Yoga" required />
                        <span asp-validation-for="Specialty" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold d-block">Verdiği Hizmetler</label>
                        <div class="row g-2">
                            @if (services != null)
                            {
                                @foreach (var service in services)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check card bg-secondary bg-opacity-10 border-secondary p-2 ps-5 h-100">
                                            <input class="form-check-input mt-1" type="checkbox" name="selectedServices"
                                                value="@service.Id" id="service_@service.Id">
                                            <label class="form-check-label text-white" for="service_@service.Id">
                                                @service.Name (@service.Price.ToString("C2"))
                                            </label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Admin" asp-action="Trainers" class="btn btn-outline-secondary px-4">İptal</a>
                        <button type="submit" class="btn btn-success px-5 fw-bold">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
