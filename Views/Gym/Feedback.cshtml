@model Employee

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center p-5">
            
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>

            <h1 class="display-6 fw-bold mb-3">Aramıza Hoş Geldin!</h1>
            
            <p class="lead text-muted mb-4">
                Sn. <strong>@Model.FullName</strong>, spor salonu kaydınız başarıyla oluşturulmuştur. 
                Sizi aramızda görmekten mutluluk duyuyoruz.
            </p>

            <hr class="my-4 w-50 mx-auto opacity-25">

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a class="btn btn-outline-success btn-lg px-4 gap-3" href="#">
                    <i class="bi bi-list-ul me-2"></i>Branşlarımız
                </a>
                
                <a class="btn btn-success btn-lg px-4" asp-action="Index" asp-controller="Home">
                    <i class="bi bi-house-door-fill me-2"></i>Anasayfa
                </a>
            </div>

        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">